<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#673AB7"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/topButton_id"
        android:layout_width="406dp"
        android:layout_height="221dp"
        android:backgroundTint="#9C27B0"
        android:onClick="changeColor"
        app:layout_constraintBottom_toTopOf="@+id/leftButton_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/leftButton_id"
        android:layout_width="216dp"
        android:layout_height="273dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#9C27B0"
        android:onClick="changeColor"
        app:layout_constraintBottom_toTopOf="@+id/rightButton_id"
        app:layout_constraintEnd_toStartOf="@+id/bottomButton_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topButton_id"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/rightButton_id"
        android:layout_width="397dp"
        android:layout_height="235dp"
        android:backgroundTint="#9C27B0"
        android:onClick="changeColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomButton_id"
        app:layout_constraintVertical_bias="0.428" />

    <Button
        android:id="@+id/bottomButton_id"
        android:layout_width="216dp"
        android:layout_height="273dp"
        android:backgroundTint="#9C27B0"
        android:onClick="changeColor"
        app:layout_constraintBottom_toTopOf="@+id/rightButton_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/leftButton_id"
        app:layout_constraintTop_toBottomOf="@+id/topButton_id" />

</androidx.constraintlayout.widget.ConstraintLayout>